<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/users', user: @user %>
      <h2>New book</h2>
      <%= render 'games/games', game: @game %>
    </div>


    <div class="col-md-8  offset-md-1">
    <h1>Gamers</h1>
    <table class="table table-user-show">
    <tr>
    <th></th>
    <th>タイトル</th>
    <th>感想</th>
    <th colspan="3"></th>
    </tr>

      <% @games.each do |game| %>
          <tr>
            <td><%= link_to user_path(@user) do %>
            <% end %></td>
              <td><%= link_to game.title, game_path(game.id) %></td>
              <td><%= game.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
